<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cskaoyan.birthday.whobirthday.activity.MyAccountActivity">

    <TextView
        android:id="@+id/tv_myaccount_username"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00ffffff">
        <TextView
            android:text="密码："
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_myaccount_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:enabled="false"/>

        <Button
            android:id="@+id/btn_myaccount_editpassword"
            android:text="修改"
            android:textSize="15sp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00ffffff">
        <TextView
            android:text="手机号："
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_myaccount_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:enabled="false"/>

        <Button
            android:id="@+id/btn_myaccount_editphone"
            android:text="修改"
            android:textSize="15sp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            />

    </LinearLayout>

</LinearLayout>
